<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.redgeckotech.popularmovies.MovieDetailActivityFragment"
                tools:showIn="@layout/activity_movie_detail">


    <FrameLayout
        android:id="@+id/movie_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue500"
        android:paddingBottom="32dp"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="32sp"
            tools:text="Movie Title"
            />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/movie_info_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_title_layout"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        >

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_gecko_logo"
            />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/movie_poster"
            android:layout_toRightOf="@id/movie_poster"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="2015"
            />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/year"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/movie_poster"
            android:layout_toRightOf="@id/movie_poster"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="120min"
            />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/duration"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/movie_poster"
            android:layout_toRightOf="@id/movie_poster"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="8.1/10"
            />

        <TextView
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/movie_poster"
            android:layout_toRightOf="@id/movie_poster"
            android:background="@color/blue300"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="@string/mark_as_favorite"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_info_top"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="This is a very long movie description, this is only a placeholder."
        />
</RelativeLayout>
